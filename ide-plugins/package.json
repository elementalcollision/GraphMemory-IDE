{
  "name": "graphmemory-ide-plugins",
  "version": "1.0.0",
  "description": "IDE plugins for GraphMemory integration with VS Code, Cursor, and Windsurf",
  "main": "shared/index.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=mcp-client.test.ts",
    "test:integration": "jest --testPathPattern=integration.test.ts",
    "test:performance": "jest --testPathPattern=performance.test.ts --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint shared/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write shared/**/*.ts tests/**/*.ts",
    "clean": "rm -rf dist coverage",
    "dev": "npm run build:watch",
    "package:vscode": "cd vscode && vsce package",
    "package:cursor": "cd cursor && npm run package",
    "package:windsurf": "cd windsurf && npm run package"
  },
  "keywords": [
    "graphmemory",
    "ide",
    "plugin",
    "vscode",
    "cursor",
    "windsurf",
    "mcp",
    "memory",
    "knowledge"
  ],
  "author": "GraphMemory Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "axios": "^1.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.32"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/graphmemory/graphmemory-ide.git",
    "directory": "ide-plugins"
  },
  "bugs": {
    "url": "https://github.com/graphmemory/graphmemory-ide/issues"
  },
  "homepage": "https://github.com/graphmemory/graphmemory-ide#readme",
  "files": [
    "shared/**/*",
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
